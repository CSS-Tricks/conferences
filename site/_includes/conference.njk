<div class="conf-head">
  <img src="/images/default-thumbnail/small/thumbnail-{{ 6 | randomNumber }}.jpg" class="thumbnail">
  <div class="conf-info">
    <h3 class="conf-title" id="{{ conf.data.title | slug }}-hed" title="{{ conf.data.title }}">
      {{ conf.data.title }}
    </h3>
    <address class="conf-location" aria-label="Event location" title="{{ conf.data.location }}">
      {{ conf.data.location }}
    </address>
  </div>
  <div class="conf-dates" aria-label="Event starts on {{ conf.data.date | readableDate }}">
    <time datetime="{{ conf.data.date | htmlTime }}" aria-hidden="true">
      <span class="day" aria-hidden="true">{{ conf.data.date | htmlTime | replace(r/^.{0,8}/, "") }}</span>
      <span class="month" aria-hidden="true">{{ conf.data.date | getMonthInitials }}</span>
    </time>
  </div>
</div>
<div class="conf-cta">
  <a href="{{ conf.url }}" aria-title="Details">
    <svg width="22" height="12" viewBox="0 0 22 12" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M15 1L20 6M20 6L15 11M20 6H0" stroke="white" stroke-width="2"/>
    </svg>
  </a>
</div>
<div class="conf-about">
  {{ conf.templateContent | safe }}
</div>

<div class="conf-actions">
  <div class="remindme card" id="reminder-{{ conf.fileSlug }}" aria-hidden="true">
    <div class="to-website">
      <a href="{{ conf.data.url | url }}" target="_blank">Go to website</a>
    </div>
    <div class="card__face card__face--front">
      <button aria-controls="reminder-{{ conf.fileSlug }}" aria-haspopup="true" aria-expanded="false">Email Event Info</button>
    </div>

    <div class="flyout card__face card__face--back">
      <form action="/.netlify/functions/send-email" method="post">
        <label>
          Email address
          <input type="email" name="email" required>
        </label>
        <input type="hidden" name="url" value="{{ conf.data.url }}">
        <input type="hidden" name="conf" value="{{ conf.data.title }}">
        <input type="hidden" name="dates" value="{{ conf.data.date | readableDate }}{% if conf.data.endDate %} - {{ conf.data.endDate | readableDate }}{% endif %}">
        <input type="hidden" name="loc" value="{{ conf.data.location }}">
        <input type="hidden" name="coc" value="{{ conf.data.cocUrl }}">
        <input type="hidden" name="desc" value="{{ conf.templateContent }}">
        <button class="send-email" aria-label="send email">
          Send Email
        </button>
      </form>
      <button aria-controls="reminder-{{ conf.fileSlug }}" aria-haspopup="true" aria-expanded="false" class="close">Close</button>
    </div>
  </div>
</div>
